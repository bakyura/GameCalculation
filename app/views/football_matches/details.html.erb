<div class="matches">  <div>    <div class="f_left">      <h1>Football Matche</h1>    </div>    <div class="clear"></div>    <div class="title">      <div class="f_left">        <%= image_tag "/images/#{@league.logo}", :height => "100" %>      </div>      <div class="name">        <%= @league.name %>      </div>      <div class="tour">        <%= @tour %> tour      </div>    </div>    <div class="matche" style="height: auto;">      <div class="matche_date">Date: <%= @matche.game_date %></div>      <div class="matche_name">        <div class="f_left">          <%= image_tag "/images/#{@team1.logo}", :height => "100" %>        </div>        <div class="f_left teams_container">          <%= @team1.name %> - <%= @team2.name %>        </div>        <div>          <%= image_tag "/images/#{@team2.logo}", :height => "100" %>        </div>      </div>      <div id="matche_info">        <br/>        <br/>        <div class="matche_info_item">          <b>Our forecast for the game:</b><br />          Win 1 Team:<br />          Draw:<br />          Win 2 Team:<br />          Possible game result:<br />        </div>        <br />        <br />        <div class="matche_info_item">          <% @prediction = BettingPrediction.first(:conditions => {:game_id => @matche.id, :bookmaker_id => @will_hill.id}) %>          <b>WillHill</b><br />          Win 1 Team: <span class="matche_info_item_r1"><%= @prediction.r_1 %></span><br />          Draw: <span class="matche_info_item_rx"><%= @prediction.r_x %></span><br />          Win 2 Team: <span class="matche_info_item_r2"><%= @prediction.r_2 %></span><br />        </div>        <br />        <br />        <div class="matche_info_item">          <% @prediction = BettingPrediction.first(:conditions => {:game_id => @matche.id, :bookmaker_id => @bet_365.id}) %>          <b>Bet365</b><br />          Win 1 Team: <span class="matche_info_item_r1"><%= @prediction.r_1 %></span><br />          Draw: <span class="matche_info_item_rx"><%= @prediction.r_x %></span><br />          Win 2 Team: <span class="matche_info_item_r2"><%= @prediction.r_2 %></span><br />        </div>        <br />        <br />        <div class="matche_info_item">          <% @prediction = BettingPrediction.first(:conditions => {:game_id => @matche.id, :bookmaker_id => @unibet.id}) %>          <b>Unibet</b><br />          Win 1 Team: <span class="matche_info_item_r1"><%= @prediction.r_1 %></span><br />          Draw: <span class="matche_info_item_rx"><%= @prediction.r_x %></span><br />          Win 2 Team: <span class="matche_info_item_r2"><%= @prediction.r_2 %></span><br />        </div>        <br />        <br />        <div class="matche_info_item">          <b>Games history:</b><br/>          Coming soon        </div>        <br />        <br />        <div class="matche_info_item">          <b>Weather forecast:</b><br />          Coming soon        </div>        <br />        <br />        <div class="matche_info_item">          <b>Latest news:</b><br />          Coming soon        </div>        <br />        <br />      </div>    </div>  </div></div>