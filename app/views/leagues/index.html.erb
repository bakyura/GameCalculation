<div class="leagues">
  <div>
    <div class="title">
      <div class="f_left">
        <%= image_tag "/images/uefa.jpg", :height => "120px", :alt => "UEFA" %>
      </div>
      <div class="name">
       &nbsp;&nbsp;UEFA
      </div>
    </div>
  </div>
  <div class="clear"></div>
  <% @leagues.each do |league| %>
    <% unless league.name.nil? %>
      <div class="league">
        <a href=<%= "/leagues/#{league.id}" %> >
          <div class="f_left">
            <%= image_tag "/images/#{league.logo}", :height => "70" %>
          </div>
          <div class="league_name">
            <%= "#{league.name}" %>
          </div>
        </a>
      </div>
    <% end %>
  <% end %>
</div>