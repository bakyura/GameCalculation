<div class="leagues">
  <div>
    <div class="title">
      <div class="f_left">
        <%= image_tag "/images/#{@league.logo}", :height => "120", :alt => "#{@league.name}" %>
      </div>
      <div class="name">
        <%= @league.name.upcase %>
      </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="league_info">
      <div class="item">
        Country: <%= @country.name %>
      </div>
      <div class="item">
        Web site: <%= link_to "#{@league.url}", "#{@league.url}", :target => "_blank" %>
      </div>
      <% if @league.id == 1 %>
        <div class="item">
          Football Matches: <%= link_to "visit", football_matches_path %>
        </div>
      <% end %>
    </div>
    
    <div "latest_news">
      <h3>Latest news</h3>
      <div>
        <span style="silver">Coming soon</span>
      </div>
    </div>
  </div>
</div>