<!DOCTYPE html>
<html>
<head>
  <title>BetAssistant</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-29744392-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>
<body>
  <center>
  <div id="main">
    <div id="header">
      <div id="logo_block">
        <a href="/">
          <img src="/images/logo.png" alt="bet assistant Alpha">
          <span class="logo_demo">alpha</span>
        </a>
        <div id="login_block">
          <% if user_signed_in? %>
            Signed in as <b><%= link_to "#{current_user.email}", "/news", :class => "login" %></b>.
            <%= link_to "Log out", destroy_user_session_path, :method => :delete, :class => "login" %>
          <% else %>
            <!-- <%= link_to "Sign up", new_user_registration_path, :class => "register" %> | --> <%= link_to "Log in", new_user_session_path, :class => "login" %>
          <% end %>
        </div>
      </div>
      <center>
      <div id="frontend_menu">
        <div class="item">
          <a href="/about">About</a>
        </div>
        <div class="item">
          <%= link_to "Statistics", statistics_path %>
        </div>
        <div class="item">
          <a href="/bettings_strategy">Bettings strategy</a>
        </div>
        <div class="item">
          <a href="/predictions">Predictions</a>
        </div>
      </div>
      </center>

    </div>
    <div id="backend_content">
      <div id="backend_wrapper">
      
        <%= yield %>
        
      </div>
      <div class="clear"></div>
    </div>
    <div id="footer">
      <div id="footer_menu">
        <a href="/predictions">Predictions</a> | <a href="/bettings_strategy">Betting strategy</a> | <a href="/statistics">Statistics</a>  | <a href="/about">About</a>
      </div>
      <div class="copyright">
        &copy; 2011 <b>bet</b> assistant
      </div>  
    </div>
  </div>
  </center>
</body>
</html>
